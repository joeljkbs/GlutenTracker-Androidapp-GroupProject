<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DigitalReceipt">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Digital Receipt"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="@color/colorBlack"
        android:fontFamily="serif"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19dp"
        android:text="Date:"
        android:textColor="@color/colorBlack"
        android:fontFamily="serif"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/title"/>
    <TextView
        android:id="@+id/datef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19dp"
        android:textStyle="italic"
        android:textColor="@color/colorBlack"
        android:fontFamily="serif"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/date"/>
    <TextView
        android:id="@+id/rid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Receipt Num:"
        android:textSize="19dp"
        android:textColor="@color/colorBlack"
        android:fontFamily="serif"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@+id/date"/>

    <TextView
        android:id="@+id/ridf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19dp"
        android:textColor="@color/colorBlack"
        android:fontFamily="serif"
        android:layout_toRightOf="@+id/rid"
        android:layout_below="@+id/date"/>

    <TextView
        android:id="@+id/protitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Purchases"
        android:textSize="19dp"
        android:layout_margin="10dp"
        android:textColor="@color/colorBlack"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:layout_below="@+id/rid"/>


    <ListView
        android:id="@+id/products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/protitle"
        android:layout_above="@id/totalamount"/>

    <TextView
        android:id="@+id/ded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Claimable Amount: $"
        android:textSize="19dp"
        android:textColor="@color/colorBlack"
        android:fontFamily="serif"
        android:layout_alignStart="@id/totalamount"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/dedf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/ded"
        android:textSize="19dp"
        android:textColor="@color/colorBlack"
        android:fontFamily="serif"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@id/ded"/>
    <TextView
        android:id="@+id/totalamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: $"
        android:textSize="19dp"
        android:textColor="@color/colorBlack"
        android:fontFamily="serif"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="10dp"
        android:layout_above="@+id/ded"
        />
    <TextView
        android:id="@+id/ta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/totalamount"
        android:textSize="19dp"
        android:textColor="@color/colorBlack"
        android:fontFamily="serif"
        android:layout_alignTop="@id/totalamount"/>
</RelativeLayout>