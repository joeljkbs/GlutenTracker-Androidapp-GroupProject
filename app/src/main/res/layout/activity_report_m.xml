<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <Button
        android:id="@+id/btnReceipt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlack"
        android:text=" Go to Receipt Management"
        android:textColor="@color/colorWhite"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/txtRpt_m"
        android:layout_width="350dp"
        android:layout_height="39dp"
        android:text="Report Management:"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:fontFamily="serif"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="4dp" />


    <!--Custom report function #43 -->
    <TextView
        android:id="@+id/txtFrom"
        android:layout_width="50dp"
        android:layout_height="39dp"
        android:layout_below="@+id/txtRpt_m"
        android:text="From:"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:fontFamily="serif"
        android:layout_marginStart="10dp"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="4dp" />
    <TextView
        android:id="@+id/txtFrom_data"
        android:layout_width="90dp"
        android:layout_height="39dp"
        android:layout_below="@+id/txtRpt_m"
        android:layout_toRightOf="@+id/txtFrom"
        android:hint="pick date"
        android:textColor="@color/colorBlack"
        android:fontFamily="serif"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="4dp" />
    <TextView
        android:id="@+id/txtTo"
        android:layout_width="25dp"
        android:layout_height="39dp"
        android:layout_below="@+id/txtRpt_m"
        android:layout_toRightOf="@+id/txtFrom_data"
        android:text="To:"
        android:textSize="15dp"
        android:textColor="@color/colorBlack"
        android:fontFamily="serif"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="4dp" />
    <TextView
        android:id="@+id/txtTo_data"
        android:layout_width="90dp"
        android:layout_height="39dp"
        android:layout_below="@+id/txtRpt_m"
        android:layout_toRightOf="@+id/txtTo"
        android:hint="Pick Date"
        android:textColor="@color/colorBlack"
        android:fontFamily="serif"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="4dp" />
    <Button
        android:id="@+id/btnSearch"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtFrom"
        android:layout_marginStart="10dp"
        android:drawableLeft="@android:drawable/ic_menu_search"
        />

    <Button
        android:id="@+id/btnMonth"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btnSearch"
        android:layout_toRightOf="@+id/btnSearch"
        android:drawableLeft="@android:drawable/ic_dialog_dialer" />

    <!--Custom report function #43 -->
    <!--The csv file report output #42 -->
    <Button
        android:id="@+id/btnCsvFile"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btnSearch"
        android:layout_toRightOf="@+id/btnMonth"
        android:drawableLeft="@android:drawable/ic_menu_save" />




    <!--The csv file report output #42 -->


    <TextView
        android:id="@+id/txtFindrpt_m"
        android:layout_width="1dp"
        android:layout_height="39dp"
        android:layout_below="@+id/txtRpt_m"
        android:textColor="@color/colorBlack"
        android:fontFamily="serif"
        android:layout_marginStart="10dp"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="4dp" />





    <TextView
        android:id="@+id/txtRecnt_m"
        android:layout_width="220dp"
        android:layout_height="39dp"
        android:layout_below="@+id/btnSearch"
        android:text="Recent records:"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:fontFamily="serif"
        android:layout_marginStart="10dp"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="4dp" />
    <TextView
        android:id="@+id/txtR_m"
        android:layout_width="220dp"
        android:layout_height="39dp"
        android:layout_below="@+id/txtFindrpt_m"
        android:textColor="@color/colorBlack"
        android:fontFamily="serif"
        android:layout_marginStart="10dp"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="4dp" />

    <ListView
        android:id="@+id/lstMReport"
        android:layout_below="@+id/txtRecnt_m"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@id/btnReceipt"/>


</RelativeLayout>